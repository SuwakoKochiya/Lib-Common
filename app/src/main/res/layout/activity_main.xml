<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chhd.android.demo.MainActivity">

    <com.chhd.android.common.ui.view.ClearEditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="5"
        android:text="123"
        app:clearIcon="@drawable/ic_more_vert_black_24dp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_white_line_bottom"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/color_text_dark"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_white_line_bottom"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="text"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/holo_red_light"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="text"
        android:textSize="@dimen/sp_14" />

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <com.chhd.android.common.ui.view.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:text="text" />
    </android.support.v7.widget.CardView>

    <com.chhd.android.common.ui.view.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_blue_light"
        android:theme="?attr/actionBarTheme" />

    <include layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="88dp"
        android:layout_height="88dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ"
        android:layout_width="88dp"
        android:layout_height="88dp" />
</LinearLayout>
